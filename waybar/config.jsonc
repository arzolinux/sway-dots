{
    "layer": "bottom",
    "position": "top",
    "height": 30,
    "spacing": 0,
    "modules-left": ["sway/workspaces","mpris","sway/mode"],
    "modules-center": ["custom/clock"],
    "modules-right": ["sway/language", "pulseaudio", "battery", "backlight", "tray"],

    "sway/workspaces": {
        "disable-scroll": true,
        "format": "{icon}{name}",
        "format-icons": {
            "default": " ",
            "urgent": "!",
            "focused": "*"
        }
    },
"mpris": {
        "format": "<span color='#252525'>[ </span><span color='#afa193'><b>music:</b></span> {artist} - {title}<span color='#252525'> ]</span>",
        "format-paused": "<span color='#252525'>[ </span><span color='#afa193'><b>paused:</b></span> {artist} - {title}<span color='#252525'> ]</span>",
        "max-length": 40,
        "player-icons": {
            "default": "▶",
            "spotify": " "
        },
        "status-icons": {
            "paused": "⏸"
        },
        // Isso garante que tudo fique em minúsculo como no seu relógio
        "artist-len": 15,
        "title-len": 20
    },
    "sway/mode": {
        "format": "  {}"
    },

    "custom/clock": {
        "format": "<span color='#252525'>[ </span>{text}<span color='#252525'> ]</span>",
        "exec": "date +'%H:%M %A, %b %d' | awk '{print tolower($0)}'",
        "interval": 3
    },

    "sway/language": {
        "format": "<span color='#252525'>[ </span><span color='#afa193'><b>key: </b></span>{short}<span color='#252525'> / </span>",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "<span color='#afa193'><b>vol:</b></span> {volume}%"
    },
    
    "battery": {
        "format": "<span color='#252525'> / </span><span color='#afa193'><b>bat:</b></span> {capacity}%",
        "format-charging": "<span color='#252525'> / </span><span color='#afa193'><b>ac:</b></span> {capacity}%",
        "tooltip": false,
        "interval": 20
    },

    "backlight": {
        "format": "<span color='#252525'> / </span><span color='#afa193'><b>mon:</b></span> {percent}%<span color='#252525'> ]</span>",
        "tooltip": false
    },
    
    "tray": {
        "icon-size": 20,
        "spacing": 7,
        "tooltip": false
    }
}
